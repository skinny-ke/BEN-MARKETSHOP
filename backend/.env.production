# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGO_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/benmarket?retryWrites=true&w=majority

# Clerk Authentication
CLERK_SECRET_KEY=sk_live_your_production_secret_key
CLERK_PUBLISHABLE_KEY=pk_live_your_production_publishable_key
CLERK_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Admin Configuration
ADMIN_EMAILS=admin@benmarket.com,your-admin@email.com

# JWT Configuration
JWT_SECRET=your_very_secure_production_jwt_secret_key_here
JWT_REFRESH_SECRET=your_very_secure_production_jwt_refresh_secret_key_here
JWT_EXPIRE=7d

# M-Pesa Configuration (Production)
MPESA_CONSUMER_KEY=your_production_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_production_mpesa_consumer_secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your_production_mpesa_passkey
MPESA_CALLBACK_URL=https://your-production-domain.com/api/mpesa/callback
MPESA_ENVIRONMENT=production

# Cloudinary Configuration (Production)
CLOUDINARY_CLOUD_NAME=your_production_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_production_cloudinary_api_key
CLOUDINARY_API_SECRET=your_production_cloudinary_api_secret

# Email Configuration (Production)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your_production_email@domain.com
SMTP_PASS=your_production_email_password
FROM_EMAIL=noreply@benmarket.com

# Frontend Configuration
FRONTEND_URL=https://your-production-frontend-domain.com
ALLOWED_ORIGINS=https://your-production-frontend-domain.com,https://ben-marketshop.vercel.app,https://ben-market-shop.onrender.com

# Security Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=200
API_KEY_RATE_LIMIT_WINDOW=600000
API_KEY_RATE_LIMIT_MAX=60

# Logging Configuration
LOG_LEVEL=info
MORGAN_FORMAT=combined

# Performance Configuration
SOCKET_MAX_MSGS=10
THROTTLE_WINDOW_MS=10000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000