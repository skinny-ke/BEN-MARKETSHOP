# ===========================================
# BEN-MARKETSHOP ENVIRONMENT VARIABLES
# ===========================================

# ===========================================
# BACKEND CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=5000

# ===========================================
# DATABASE
# ===========================================
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/benmarket?retryWrites=true&w=majority

# ===========================================
# AUTHENTICATION (CLERK)
# ===========================================
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here
ADMIN_EMAILS=admin@benmarket.com, your.email@example.com

# ===========================================
# JWT (LEGACY - DEPRECATED WITH CLERK)
# ===========================================
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_EXPIRE=7d

# ===========================================
# M-PESA DARAJA API
# ===========================================
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your_mpesa_passkey
MPESA_CALLBACK_URL=https://your-domain.com/api/mpesa/callback
MPESA_ENVIRONMENT=sandbox

# ===========================================
# CLOUDINARY (IMAGE UPLOADS)
# ===========================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===========================================
# EMAIL NOTIFICATIONS (RESEND)
# ===========================================
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=noreply@your-domain.com

# ===========================================
# ANALYTICS (POSTHOG)
# ===========================================
POSTHOG_KEY=phc_your_posthog_key_here
POSTHOG_HOST=https://app.posthog.com

# ===========================================
# CORS & SECURITY
# ===========================================
FRONTEND_URL=https://ben-marketshop.vercel.app

# ===========================================
# FRONTEND (VITE)
# ===========================================
VITE_API_URL=https://your-backend-domain.onrender.com
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
VITE_POSTHOG_KEY=phc_your_posthog_key_here
VITE_POSTHOG_HOST=https://app.posthog.com

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# For production, update these URLs:
# CORS_ORIGIN=https://your-frontend-domain.vercel.app
# FRONTEND_URL=https://your-frontend-domain.vercel.app
# VITE_API_URL=https://your-backend-domain.onrender.com
# MPESA_CALLBACK_URL=https://your-backend-domain.onrender.com/api/mpesa/callback
